#include <iostream>
#include <windows.h>
#include <conio.h>
#define BG_YELLOW  "\x1B[43m"
using namespace std;
void logo(int i, int j) {
	HANDLE salida = GetStdHandle(STD_OUTPUT_HANDLE);
	SetConsoleTextAttribute(salida, FOREGROUND_RED);
	if (i == 4 && j == 35) {
		cout << char(218);
	}
	else if (j == 83 && i == 4) {
		cout << char(191);
	}
	else if (j == 35 && i == 19) {
		cout << char(192);
	}
	else if (j == 83 && i == 19) {
		cout << char(217);
	}
	else if ((j == 35 || j == 83) && (i >= 4 && i <= 19)) {
		cout << char(179);
	}
	else if ((i == 4 || i == 19) && (j >= 35 && j <= 83)) {
		cout << char(196);
	}
	if ((i == 6) && (j == 42 || j == 43 || j == 48 || j == 49)) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 7) && (j == 42 || j == 43 || j == 47 || j == 48)) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 8) && (j == 42 || j == 43 || j == 46 || j == 47)) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 9) && (j == 42 || j == 43 || j == 45 || j == 46)) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 10) && ((j >= 42 && j <= 45) || (j == 52 || j == 53))) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 11) && ((j >= 42 && j <= 44) || (j >= 56 && j <= 58) || (j >= 64 && j <= 65)
		|| (j >= 68 && j <= 76))){
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 12) && ((j >= 42 && j <= 44) || (j >= 52 && j <= 53) || (j >= 56 && j <= 59) ||
		(j >= 64 && j <= 65) || (j >= 68 && j <= 69))) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 13) && ((j >= 42 && j <= 45) || (j >= 52 && j <= 53) || (j >= 56 && j <= 57) ||
		(j >= 59 && j <= 60) || (j >= 64 && j <= 65) || (j >= 68 && j <= 69))) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 14) && ((j >= 42 && j <= 43) || (j >= 45 && j <= 46) || (j >= 52 && j <= 53) || 
		(j >= 56 && j <= 57) || (j >= 60 && j <= 61) || (j >= 64 && j <= 65) || (j >= 68 && j <= 69)
		|| (j >= 73 && j <= 76))){
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 15) && ((j >= 42 && j <= 43) || (j >= 46 && j <= 47) || (j >= 52 && j <= 53) ||
		(j >= 56 && j <= 57) || (j >= 61 && j <= 62) || (j >= 64 && j <= 65) || (j >= 68 && j <= 69)
		|| (j >= 75 && j <= 76))) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 16) && ((j >= 42 && j <= 43) || (j >= 47 && j <= 48) || (j >= 52 && j <= 53) ||
		(j >= 56 && j <= 57) || (j >= 62 && j <= 65) || (j >= 68 && j <= 69) || (j >= 75 && j <= 76))) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}
	if ((i == 17) && ((j >= 42 && j <= 43) || (j >= 48 && j <= 49) || (j >= 52 && j <= 53) ||
		(j >= 56 && j <= 57) || (j >= 63 && j <= 65) || (j >= 68 && j <= 76))) {
		SetConsoleTextAttribute(salida, BACKGROUND_RED);
		cout << " ";
	}

	if (i == 23 && j == 5) {
		cout << "	Integrantes:" << endl;
		cout << "	Rojas Cadillo, Cesar Sebastian" << endl;
		cout << "	Cardenas Coronado, Jose Isaac" << endl;
		cout << "	Chipana Zambrano, Kenneth Pedro" << endl;
	}
}
void instrucciones(int i, int j) {
	if (i == 5 && j == 5) {
		cout << "	Instrucciones:" << endl;
	}
}
void ganador(int i, int j) {
	cout << BG_YELLOW;
