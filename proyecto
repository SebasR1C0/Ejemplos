void contorno(int *a) {
	HANDLE salida = GetStdHandle(STD_OUTPUT_HANDLE);
	COORD c;
	for (int i = 1; i <= 28; i++) {
		for (int j = 2; j <= 117; j++) {
			c.X = j;
			c.Y = i;
			SetConsoleCursorPosition(salida, c);
			switch (*a) {
			case 1: logo(i, j);
				break;
			case 2:instrucciones(i,j);
				break;
			case 3: ganador(i, j);
			}
			SetConsoleTextAttribute(salida, FOREGROUND_INTENSITY);
			if (i == 1 && j == 2) {
				cout << char(201);
			}
			else if (j == 117 && i == 1) {
				cout << char(187);
			}
			else if (j == 2 && i == 28) {
				cout << char(200);
			}
			else if (j == 117 && i == 28) {
				cout << char(188);
			}
			else if (j == 2 || j == 117) {
			cout << char (186);
			}
			else if (i == 1 || i== 28) {
			cout << char(205);
			}
		}
	}
	*a += 1;
}
int main() {
	int* a = new int;
	*a = 1;
	contorno(a);
	Sleep(5000);
	system("cls");
	contorno(a);
	Sleep(10000);
	system("cls");
	contorno(a);
	_getch();
	return 0;
}
