#include"util.h"
#ifdef MAIN1
int main() {
	int primos = 0, multiplos;
	for (int i = 2; primos != 50; i++) {
		multiplos = 0;
		for (int j = 1; j <= i; j++) {
			if (i % j == 0) {
				multiplos++;
			}
		}
		if (multiplos == 2) {
			primos++;
			cout << i << " ";
		}
	}
	return 0;
}
#endif
