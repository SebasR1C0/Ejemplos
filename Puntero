#include <iostream>
using namespace std;
int main() {
	int a, b, * x, * y;
	 x = new int;
	 y = new int;
	 cout << "El valor del primer numero es: ";
	 cin >> *x;
	cout << "El valor del segundo numero es: ";
	cin >> *y;
	cout << "La suma de los puntero es: " << *x + *y << endl;
	cout << "La resta de los puntero es: " << *x - *y << endl;
	cout << "El producto de los puntero es: " << *x * *y << endl;
	delete x;
	delete y;
	return 0;
}
