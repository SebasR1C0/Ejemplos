#include <iostream>
#include <iostream>
#include <conio.h>
using namespace std;
using namespace System;
void DeterminaPorcentajes(int n) {
	int edad, nencuestado = 1, cni単os = 0, cjovenes = 0, cadultos = 0, cadultosmayores = 0;
	while (nencuestado <= n) {
		cout <<"Ingrese la edad del encuestado : ";
		cin >> edad;
		if (edad >= 0 && edad <= 12) cni単os++;
		if (edad >=13 && edad <= 29) cjovenes++;
		if (edad >=30 && edad <= 59) cadultos++;
		if (edad >= 60)cadultosmayores++;
		nencuestado++;
	}
	cout << "Porcentaje de ni単os: " << (cni単os / n) * 100.00 << "%" << endl;
	cout << "Porcentaje de jovenes: " << (float)(100.00*cjovenes/ n)  << "%" << endl;
	cout << "Porcentaje de adultos: " << (float)(100.00 * cadultos / n)  << "%" << endl;
	cout << "Porcentaje de adultosmayores: " << 100.00 * cadultosmayores /n  << "%" << endl;
}
void main() {
	int n;//3
	cout << "Ingrese n: ";
	cin >> n;
	DeterminaPorcentajes(n);
	system("pause");
}
